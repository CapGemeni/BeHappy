    <style name="EditText" />


    <style name="EditText.White">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorHighlight">@color/black600</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="EditText.Gray">
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="android:textColorHighlight">@color/black600</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="Text.lightError" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black600</item>
    </style>

    <style name="Text.Gray" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/gray500</item>
    </style>

    <style name="Button.Solid">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.Size24</item>
    </style>
    <style name="Button.Yellow" parent="Button.Solid">
        <item name="android:background">@drawable/btn_solid_yellow</item>
    </style>
    <style name="Button.Aqua" parent="Button.Solid">
        <item name="android:background">@drawable/btn_solid_aqua</item>
    </style>
    <style name="Button.Stroke">
        <item name="android:textColor">@color/aqua</item>
        <item name="android:textAppearance">@style/Text.Size18</item>
        <item name="android:background">@drawable/btn_stroke</item>
    </style>

    <style name="Button.Detalle" parent="Button.Solid">
        <item name="android:background">@drawable/btn_detalle</item>
        <item name="android:textAppearance">@style/Text.Size12</item>
    </style>

