<?xml version="1.0" encoding="utf-8"?>

<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bbva.intranet.behappy.modules.login.LoginActivity">

        <LinearLayout
            android:background="@drawable/backgroud_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:src="@drawable/banner_main"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bhappy"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    />
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:hint="Usuario"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray100"
                    android:textSize="20dp"
                    android:background="#2a86ca"
                    />
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:hint="¿Cómo te gusta que te digan?"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray100"
                    android:textSize="20dp"
                    android:background="#2a86ca"
                    />

                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:background="#2dcccd"
                    android:text="CONTINUAR"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:ignore="InvalidId" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
