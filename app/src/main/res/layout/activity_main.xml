<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/main_request_resource"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/main_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center" />
    </ScrollView>

    <Button
        android:id="@+id/main_get_resource_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:enabled="false"
        android:text="@string/clean_credentials" />

    <Button
        android:id="@+id/main_request_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_get_resource_button"
        android:layout_marginTop="17dp"
        android:text="@string/request_resource"
        android:layout_centerHorizontal="true" />

</RelativeLayout>