                         android:background="@drawable/calendario" />
                 </LinearLayout>
             </LinearLayout>
              <!--fragment-->
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
                 <fragment
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:name="com.bbva.intranet.behappy.modules.recompensas.ListaLogrosFragment"
                     android:id="@+id/lista_logros_fragment"
                     tools:layout="@layout/fragment_lista_logros"/>
