<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bbva.intranet.behappy.modules.animometro.ResultStatusLogrosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_op60">

        <LinearLayout
            android:id="@+id/container_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:background="@color/yellow"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/ic_close"
                    android:layout_margin="@dimen/screen_margin"
                    android:contentDescription="@string/label_close" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/screen_margin">

                    <com.bbva.intranet.behappy.components.FaceTextView
                        android:id="@+id/tv_status"
                        style="@style/Text.Size24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â¡Has ganado 5 PTS!"
                        android:textColor="@color/white" />

                    <ImageView
                        style="@style/Text.Size18"
                        android:layout_width="237dp"
                        android:layout_height="158dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/ic_bg_puntos" />

                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/label_close" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@mipmap/bg_animometro_desc_white"
                android:gravity="center"
                android:orientation="vertical">


                <com.bbva.intranet.behappy.components.FaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.Size18"
                    android:text="Sigue acumulando puntos"/>

                <Button
                    android:id="@+id/btn_continue"
                    style="@style/Button.Aqua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Ver mis logros" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>