<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bbva.intranet.behappy.modules.eventos.HistorialEventosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--CONTENT PARENTH-->
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <!--Contenido-->

            <!--contenedor Imagen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:src="@drawable/banner_conoce" />
            </LinearLayout>
            <!--/contenedor Imagen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="--------------------   AGOSTO   --------------------"
                    android:gravity="center"
                    style="@style/Text.Size22"
                    android:textColor="@color/gray500"/>
            </LinearLayout>
            <!--Conenedor Eventos Fragment-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <fragment
                    android:id="@+id/historial_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_historial"/>
            </LinearLayout>
            <!--/Conenedor Eventos Fragment-->
            <!--/Contenido-->
        </LinearLayout><!--CONTENT PARENTH-->
    </ScrollView>

</layout>

