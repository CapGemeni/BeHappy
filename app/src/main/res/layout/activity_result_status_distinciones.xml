<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bbva.intranet.behappy.modules.animometro.ResultStatusDistincionesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_op60">

        <LinearLayout
            android:id="@+id/container_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:background="#b099dc"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/ic_close"
                    android:layout_margin="@dimen/screen_margin"
                    android:contentDescription="@string/label_close" />
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="324dp"
                        android:layout_height="174dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/estrella_distinciones2" />

                    <TextView
                        style="@style/Text.Size28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="¡Felicidades!"
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@mipmap/bg_animometro_desc_white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/persona1" />

                <TextView
                    style="@style/Text.Size20"
                    android:layout_width="166dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Leonardo Vera"
                    android:textColor="@color/medium_blue"
                    android:textSize="14dp" />

                <TextView
                    style="@style/Text.Size28"
                    android:layout_width="241dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Te ha envíado una distinción. Si deseas puedes agradecer el gesto enviando una también."
                    android:textColor="@color/black_op60"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="En otro momento" />
                    />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="Envíar distinción" />
                    />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</layout>
