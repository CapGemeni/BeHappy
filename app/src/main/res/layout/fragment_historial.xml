<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bbva.intranet.behappy.modules.eventos.HistorialFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--CONTENT PARENTH-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <!--Contenido-->

            <!--contenedor Imagen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner_conoce" />
            </LinearLayout>
            <!--/contenedor Imagen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="--------------------   AGOSTO   --------------------"
                    android:gravity="center"
                    style="@style/Text.Size14"
                    android:textColor="@color/gray500"/>
            </LinearLayout>
            <!--Conenedor Eventos Fragment-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp">
                <fragment
                    android:id="@+id/fragment_proximos_eventos"
                    android:name="com.bbva.intranet.behappy.modules.eventos.EventosProximosFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_eventos_proximos"/>
            </LinearLayout>

            <!--/Conenedor Eventos Fragment-->
            <!--/Contenido-->
        </LinearLayout><!--CONTENT PARENTH-->
    </ScrollView>
</layout>
